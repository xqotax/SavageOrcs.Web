@using Microsoft.AspNetCore.Identity
@using SavageOrcs.BusinessObjects

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item px-2 rounded">
            <p id="manage" class="nav-link display-7-custom" style="color: white"  title="Manage">@UserManager.GetUserName(User)</p>
    </li>
    <li class="nav-item px-2 rounded">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Main", "Map", new { area = "" })">
                <button id="logout" type="submit" style="color: white" class="nav-link btn btn-link display-7-custom">Вийти</button>
        </form>
    </li>
}
else
{
    <li class="nav-item px-2 rounded">
            <a class="nav-link display-7-custom" style="color: white" id="register" asp-area="Identity" asp-page="/Account/Register">Реєстрація</a>
    </li>
    <li class="nav-item px-2 rounded">
            <a class="nav-link display-7-custom" style="color: white" id="login" asp-area="Identity" asp-page="/Account/Login">Вхід</a>
    </li>
}
</ul>
